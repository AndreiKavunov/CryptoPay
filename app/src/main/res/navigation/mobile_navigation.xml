<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.basicexample.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_navigation_person_to_registrationDialogFragment"
            app:destination="@id/registrationDialogFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_person"
        android:name="com.example.basicexample.ui.person.PersonFragment"
        android:label="@string/title_person"
        tools:layout="@layout/fragment_person">
        <action
            android:id="@+id/action_navigation_person_to_addPersonDialogFragment"
            app:destination="@id/addPersonDialogFragment" />
        <action
            android:id="@+id/action_navigation_person_to_infoPersonDialogFragment"
            app:destination="@id/infoPersonDialogFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.basicexample.ui.profile.ProfileFragment"
        android:label="@string/Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_navigation_profile_to_registrationDialogFragment"
            app:destination="@id/registrationDialogFragment">

        </action>

    </fragment>
    <fragment
        android:id="@+id/registrationDialogFragment"
        android:name="com.example.basicexample.ui.profile.RegistrationDialogFragment"
        android:label="RegistrationDialogFragment"></fragment>
    <fragment
        android:id="@+id/addPersonDialogFragment"
        android:name="com.example.basicexample.ui.person.AddPersonDialogFragment"
        android:label="AddPersonDialogFragment" />
    <fragment
        android:id="@+id/infoPersonDialogFragment"
        android:name="com.example.basicexample.ui.person.InfoPersonDialogFragment"
        android:label="InfoPersonDialogFragment" />
</navigation>